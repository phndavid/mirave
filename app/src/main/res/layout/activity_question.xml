<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/empanada_xhdpi"
    tools:context="com.master.ndavid.calirapido.ActivityQuestion"
    android:id="@+id/relaQ">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Answer (A)"
        android:background="@drawable/arojo_xhdpi"
        android:id="@+id/btn_answerA"
        android:onClick="btn_answerA"
        android:layout_above="@+id/btn_answerB"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_alignRight="@+id/txt_question"
        android:layout_alignEnd="@+id/txt_question" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Answer (B)"
        android:background="@drawable/brojo_xhdpi"
        android:id="@+id/btn_answerB"
        android:onClick="btn_answerB"
        android:layout_above="@+id/btn_answerC"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_alignRight="@+id/btn_answerA"
        android:layout_alignEnd="@+id/btn_answerA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Answer (C)"
        android:background="@drawable/arojo_xhdpi"
        android:id="@+id/btn_answerC"
        android:onClick="btn_answerC"
        android:layout_above="@+id/btn_answerD"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_alignRight="@+id/txt_question"
        android:layout_alignEnd="@+id/txt_question" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Answer (D)"
        android:background="@drawable/brojo_xhdpi"
        android:id="@+id/btn_answerD"
        android:onClick="btn_answerD"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_alignRight="@+id/txt_question"
        android:layout_alignEnd="@+id/txt_question" />

    <TextView
        android:layout_width="336dp"
        android:layout_height="69dp"
        android:text="Â¿Question?"
        android:id="@+id/txt_question"
        android:textColor="#000"
        android:textSize="25px"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_above="@+id/btn_answerA"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_above="@+id/txt_question"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp" />

</RelativeLayout>
