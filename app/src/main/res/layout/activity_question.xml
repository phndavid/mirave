<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.master.ndavid.calirapido.ActivityQuestion">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer (A)"
        android:id="@+id/btn_answerA"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="169dp"
        android:onClick="btn_answerA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer (B)"
        android:id="@+id/btn_answerB"
        android:layout_marginTop="48dp"
        android:layout_alignTop="@+id/btn_answerA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btn_answerB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer (C)"
        android:id="@+id/btn_answerC"
        android:layout_below="@+id/btn_answerB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_answerB"
        android:layout_alignEnd="@+id/btn_answerB"
        android:onClick="btn_answerC" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer (D)"
        android:id="@+id/btn_answerD"
        android:layout_below="@+id/btn_answerC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btn_answerD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_answerB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:layout_width="336dp"
            android:layout_height="69dp"
            android:text="Â¿Question?"
            android:id="@+id/txt_question"
            android:textColor="#000"
            android:textSize="25px"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>
