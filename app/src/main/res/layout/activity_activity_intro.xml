<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.master.ndavid.calirapido.ActivityIntro">

    <TextView android:text="Hablame, bien o qué? En el barrio me dicen calidoso me contaron que estas en Cali por unos días y estas más aburrido que empanada sin ají. Sabes qué? veni y tírate un borondo conmigo pa’ que conozcas la sucursal del cielo. " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_intro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/btn_continue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btn_continue" />

</RelativeLayout>
