<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.master.ndavid.calirapido.ActivityFeedBack"
    android:id="@+id/relativeF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_puntaje"
        android:textSize="50dp"
        android:layout_above="@+id/btn_newGame"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUGAR DE NUEVO"
        android:background="@android:color/transparent"
        android:id="@+id/btn_newGame"
        android:onClick="btn_newGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_chonta"
        android:src="@drawable/chontabuena_xhdpi"
        android:layout_above="@+id/txt_puntaje"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
